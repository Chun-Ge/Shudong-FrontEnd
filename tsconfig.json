{
  "compileOnSave": false,
  "compilerOptions": {
      // "outDir": "./public/",
      "sourceMap": true,
      "strict": false,
      "noImplicitReturns": true,
      "experimentalDecorators": true,
      "module": "es6",
      "moduleResolution": "node",
      "removeComments": true,
      "target": "es6"
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "lib": [
    "dom",
    "es2016",
    "es2015",
    "es2015.promise",
    // "es6-promise",
    // "esnext"
  ]
}
