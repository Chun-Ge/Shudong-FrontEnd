
.register-container
  width: 100%
  display: flex
  flex-direction: row
  align-items: center
  justify-content: center
  .panel
    margin-top:10%
    background-color: white
    padding: 50px
    .panel-heading
      margin-bottom: 5%
      font-size: 400%
      .text-wrapper
        .text-small
          font-size: 40%  
          text-align: center
          // color: #c4c4c4
          opacity: 0.7
    .panel-body
      margin: 2% 0%
      width: 100%
      .register-info
        margin: 2% 0%
        .input
          width: 100%
          margin: 3%  0%
      .register-statement
        font-size: 100%
        color: #A4B2DA
        margin: 3% 0
        // text-align: center
        
      .register-confirm
        width: 100%
        button
          width: 100%
    .panel-footer
      margin-top: 10px
      text-align: center
      font-size: 130%
      width: 100%
      background-color: #F6F6F6


